{{ 'style.css' | asset_url | stylesheet_tag }}
<style>
{% render 'custom-styles' %}
</style>
{% if shop.metafields.check.enabled == "true" %}
<h3>Our Bestsellers</h3>
<div style = "display:flex;justify-content:space-around;">
  
  {% for field in shop.metafields.inventer %}
       
       {% assign title = field | last | split: "," %}
       {% assign col = title[4] %}
       {% assign image_width = title[7] %}
       
    
    <div style = "display:flex;flex-direction:column;" class = "grid-item-{{col}} test"> 
     
        <img src = "{{title[0]}}" width = "{{image_width}}" height = "auto" style = "width:100%;object-fit:contain;margin-bottom:15px;" />
    
         <h3 style = "font-size:15px;margin-block-end:7px;margin-block-start:7px;text-align:center;">{{title[3]}}</h3>
         <h3 style = "margin-block-end:0px;margin-block-start:5px;font-weight:700;text-transform:uppercase;font-size:12px;text-align:center;">{{title[2]}}</h3>
         <span style = "margin-top:10px;font-size:20px;text-align:center;"> Â£{{title[6]}}</span>
       
     </div>  
       {% comment %}  {% for t in title %}
        <h1>{{t}}</h1> <p>break<p>
         {% endfor %}
        {% endcomment %}
    
       
{% endfor %}
  </div>
{% endif %}
{% schema %}
{
  "name": "t:blocks.product-reviews.name",
  "templates": ["index"],
  "target": "section",
  "settings": [
    {
      "type": "color",
      "id": "stars_fill_color",
      "label": "t:blocks.product-reviews.settings.stars_fill_color.label",
      "default": "#000000"
    },
    {
      "type": "number",
      "id": "star_size",
      "label": "t:blocks.product-reviews.settings.star_size.label",
      "default": 24
    },
    {
      "type": "number",
      "id": "padding_x",
      "label": "t:blocks.product-reviews.settings.padding_x.label",
      "default": 50
    },
    {
      "type": "number",
      "id": "padding_y",
      "label": "t:blocks.product-reviews.settings.padding_y.label",
      "default": 0
    },
    {
      "id": "heading",
      "type": "text",
      "label": "t:blocks.product-reviews.settings.heading.label",
      "default": "Customer Reviews"
    },
	  {
      "id": "no_reviews_action_text",
      "type": "text",
      "label": "t:blocks.product-reviews.settings.no_reviews_action_text.label",
      "default": "Be the first to review this product."
    },
	  {
      "id": "existing_reviews_action_text",
      "type": "text",
      "label": "t:blocks.product-reviews.settings.existing_reviews_action_text.label",
      "default": "Write Review"
    },
    {
      "id": "allow_unverified_reviews",
      "type": "checkbox",
      "label": "t:blocks.product-reviews.settings.allow_unverified_reviews.label",
      "default": false
    },
    {
      "id": "product",
      "type": "product",
      "label": "t:blocks.product-reviews.settings.product.label",
      "autofill": true
    }
  ]
}
{% endschema %}
